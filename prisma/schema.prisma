generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Department {  // Corrigido de 'Departament' para 'Department'
  id        Int      @id @default(autoincrement())
  name      String
  prenotes  Prenote[]
}

model Article {
  id           Int      @id @default(autoincrement())
  name         String
  item         String   @default("")
  location     String?
  order_qty    Int      @default(0)
  assq         Int?     @default(0)
  mpq          Int      @default(0)
  palq         Int      @default(0)
  qty_in_sales Int      @default(0)
  ms           Boolean  @default(false)
  bts          Boolean  @default(false)
  top_up       Boolean  @default(false)
  notes        String?  @db.Text
  image_url    String?  @default("")
  done         Boolean  @default(false)
  prenote      Prenote  @relation(fields: [prenoteId], references: [id])
  status       String  @default("available ")
  prenoteId    Int
}

model Prenote {
  id            Int         @id @default(autoincrement())
  date          DateTime
  department    Department  @relation(fields: [departmentId], references: [id]) // Atualizado para 'department'
  departmentId  Int
  articles      Article[]
}
